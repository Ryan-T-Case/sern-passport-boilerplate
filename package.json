{
  "name": "sern-passport-boilerplate",
  "version": "1.0.0",
  "description": "A user authentication boilerplate built on the SERN stack with Passport",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "client": "npm start --prefix client",
    "server": "node server.js",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ryan-T-Case/sern-passport-boilerplate.git"
  },
  "author": "Ryan Case",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Ryan-T-Case/sern-passport-boilerplate/issues"
  },
  "homepage": "https://github.com/Ryan-T-Case/sern-passport-boilerplate#readme",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "cors": "^2.8.4",
    "dotenv": "^6.1.0",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "mysql2": "^1.5.3",
    "nodemailer": "^6.4.16",
    "nodemon": "^1.18.3",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "sequelize": "^5.3.0",
    "sequelize-cli": "^4.0.0"
  }
}
